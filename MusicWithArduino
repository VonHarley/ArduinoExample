// include the Esplora library
#include <Esplora.h>
  int i = 0;
void setup() {

  // nothing to setup


}

void loop() {

  Esplora.writeBlue(0);
  Esplora.writeRed(i);



  Esplora.writeGreen(255 - i);




  


  if(Esplora.readJoystickSwitch()== 0){
        Esplora.writeRed(0);

  Esplora.writeBlue(i);




  Esplora.writeGreen(255 - i);

  

  }

  i = i + 5;

  if(i > 255){
      Esplora.writeBlue(255);
  Esplora.writeGreen(255);
    Esplora.writeRed(255);

    i = 0;
  }

}
void loop()
{
// read the button labeled SWITCH_DOWN. If it's low,
// then play a note:
if (Esplora.readButton(SWITCH_DOWN) == LOW) {
int slider = Esplora.readSlider();
 
// use map() to map the slider's range to the
// range of notes you have:
byte thisNote = map(slider, 0, 1023, 0, 13);
// play the note corresponding to the slider's position:
Esplora.tone(note[thisNote]);
}
else {
// if the button isn't pressed, turn the note off:
Esplora.noTone();
}
}
